<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    tools:context=".Screen.TestActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:id="@+id/headQuestion">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Введите перевод"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/Question"
            android:layout_margin="32dp"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Answer"
            android:hint="Перевод"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimary"
            android:textSize="20sp"
            app:met_floatingLabel="highlight"
            app:met_baseColor="@color/colorPrimaryDark"
            app:met_primaryColor="@color/colorAccent"
            app:met_singleLineEllipsis="true"
            />
        <Button
            android:id="@+id/buttonQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Проверить"
            android:onClick="butTest2"
            android:background="@drawable/button"/>
        <Button
            android:id="@+id/buttonSkip"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Пропустить"
            android:onClick="butSkip"
            android:background="@drawable/button"/>
        <Button
            android:id="@+id/buttonExet"
            android:onClick="extTest"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выход"
            android:background="@drawable/button"/>
    </LinearLayout>
</RelativeLayout>